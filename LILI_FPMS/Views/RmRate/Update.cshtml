@model LILI_FPMS.Models.tblRMRate


@*<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>*@


<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<section class="content-header">
    @*<h1>
            Shift
        </h1>*@
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">RM Rate</li>
        <li class="active">Update Rate</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info" style="border:1px solid; border-color:cadetblue; padding:10px">
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-controller="RmRate" method="post" asp-action="UpdateRmRate">
            <div class="card-body">
                <div class="form-group">
                    <label for="PlantCode" class="col-sm-2 control-label">Plant Code</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="PlantCode" placeholder="PlantCode" value="@Model.PlantCode">
                        <span asp-validation-for="PlantCode"></span>

                    </div>
                </div>
                <div class="form-group">
                    <label for="ItemCode" class="col-sm-2 control-label">Item Code</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="ItemCode" placeholder="ItemCode" value="@Model.ItemCode">
                        <span asp-validation-for="ItemCode"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="Period" class="col-sm-2 control-label">Period</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Period" placeholder="Period" value="@Model.Period">
                        <span asp-validation-for="Period"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="ClosingCost" class="col-sm-2 control-label">ClosingCost</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="ClosingCost" placeholder="ClosingCost" value="@Model.ClosingCost">
                        <span asp-validation-for="Period"></span>
                    </div>
                </div>

                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
            <!-- /.card-body -->
            <div class="box-footer">
                <a class="btn btn-mini btn-primary" href='@Url.Content("/RmRate/Index")'>Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>
