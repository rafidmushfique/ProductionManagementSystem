@model LILI_FPMS.Models.TblMachineSetup


@*<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>*@


<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<section class="content-header">
    @*<h1>
            Shift
        </h1>*@
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Machine Setup</li>
        <li class="active">Update Machine</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info" style="border:1px solid; border-color:cadetblue; padding:10px">
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-controller="Machine" method="post" asp-action="UpdateMachine">
            <div class="card-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Product Code</label>
                    <div class="col-sm-4">
                        <input type="text" asp-for="ProductCode" class="form-control" placeholder="Product Code" readonly="readonly" value="@Model.ProductCode">
                        <span asp-validation-for="ProductCode"></span>
                    </div>
                    <label for="inputEmail3" class="col-sm-2 control-label">Product Name</label>
                    <div class="col-sm-4">
                        <input type="text" asp-for="ProductName" class="form-control" placeholder="Product Name" readonly="readonly" value="@Model.ProductName">
                        <span asp-validation-for="ProductName"></span>
                    </div>
                </div>
                <div class="form-group control-group">
                    <label asp-for="MachineCode" class="col-sm-2 control-label">Machine Name</label>
                    <div class="col-sm-10">
                        <select asp-for="MachineCode" class="form-control" asp-items="@(new SelectList(ViewBag.ListOfMachine,"MachineCode","MachineName"))"></select>
                        <span asp-validation-for="MachineCode"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Manufacturing Capacity</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Capacity" placeholder="Manufacturing Capacity" value="@Model.Capacity">
                        <span asp-validation-for="Capacity"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Packing Capacity</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="CapacityPacking" class="form-control" placeholder="Packing Capacity" value="@Model.CapacityPacking">
                    </div>
                </div>

                
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Manufacturing Speed</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Speed" placeholder="Manufacturing Speed" value="@Model.Speed">
                        <span asp-validation-for="Speed"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Packing Speed</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="SpeedPacking" class="form-control" placeholder="Packing Speed" value="@Model.SpeedPacking">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Comments</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Comments" placeholder="Comments" value="@Model.Comments">
                        <span asp-validation-for="Comments"></span>
                    </div>
                </div>

                    <input type="hidden" name="Id" value="@Model.Id" />
            </div>
                <!-- /.card-body -->
                <div class="box-footer">
                    <a class="btn btn-mini btn-primary" href='@Url.Content("/Machine/Index")'>Cancel</a>
                    <button type="submit" class="btn btn-info pull-right">Update</button>
                </div>
                <!-- /.box-footer -->
</form>
    </div>
    <!-- /.box -->
</section>
