@model LILI_FPMS.Models.TblLineSetup


@*<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>*@


<!-- Modal placeholder -->
<div id="modal-placeholder"></div>

<section class="content-header">
    @*<h1>
            Shift
        </h1>*@
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Line Setup</li>
        <li class="active">Update Line</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info" style="border:1px solid; border-color:cadetblue; padding:10px">
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-controller="Line" method="post" asp-action="UpdateLine">
            <div class="card-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Line Code</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="LineCode" placeholder="Name" value="@Model.LineCode">
                        <span asp-validation-for="LineCode"></span>

                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Line Name</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="LineName" placeholder="EmpId" value="@Model.LineName">
                        <span asp-validation-for="LineName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Comments</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" asp-for="Comments" placeholder="Comments" value="@Model.Comments">
                        <span asp-validation-for="Comments"></span>
                    </div>
                </div>
                <input type="hidden" name="Id" value="@Model.Id" />
            </div>
            <!-- /.card-body -->
            <div class="box-footer">
                <a class="btn btn-mini btn-primary" href='@Url.Content("/Line/Index")'>Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Update</button>
            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>
