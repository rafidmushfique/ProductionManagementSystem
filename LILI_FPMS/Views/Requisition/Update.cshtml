                        var unitCell = "<td><input style='width:100%' class='form-control nothing' readonly id='tblRequisitionDetail_" + index + "_Unit' name='tblRequisitionDetail[" + index + "].Unit' type='text' value='" + elem.Unit + "' /></td>";
                        var standardRecipeQtyCell = "<td><input class='calStdRecipe' style='text-align:right; width:100%'  id='tblRequisitionDetail_" + index + "_StandardRecipeQty' name='tblRequisitionDetail[" + index + "].StandardRecipeQty' type='text' value='" + elem.StandardRecipeQty + "' /></td>";
                        var floorStockCell = "<td><input class='calFloorStock' style='text-align:right; width:100%'  id='tblRequisitionDetail_" + index + "_FloorStock' name='tblRequisitionDetail[" + index + "].FloorStock' type='text' value='" + elem.FloorStock + "' /></td>";
                        //var availableStockCell = "<td><input style='text-align:right; width:80%' class='form-control nothing' readonly id='tblRequisitionDetail_" + index + "_AvailableStock' name='tblRequisitionDetail[" + index + "].AvailableStock' type='text' value='" + elem.AvailableStock + "' /></td>";
                        var EstimatedQtyValue = elem.StandardRecipeQty - elem.FloorStock;
                        var estimatedQtyCell = "<td><input style='text-align:right; width:100%' id='TblRequisitionDetail_" + index + "_EstimatedQty' name='TblRequisitionDetail[" + index + "].EstimatedQty' type='text' value='" + EstimatedQtyValue.toFixed(2) + "' /></td>";

                        var availableStockCell = "<td><input style='text-align:right; width:80%' readonly id='tblRequisitionDetail_" + index + "_AvailableStock' name='tblRequisitionDetail[" + index + "].AvailableStock' type='text' value='" + elem.AvailableStock + "' /></td>";
