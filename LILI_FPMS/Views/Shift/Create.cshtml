@model LILI_FPMS.Models.TblShiftSetup

@*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>*@




@*<script src="~/lib/JQuery-unobtrusive-Ajax/jquery-ajax-unobtrusive-master/src/jquery.unobtrusive-ajax.js"></script>*@

<!-- Modal placeholder -->
<div id="modal-placeholder"></div>



<!-- Content Header (Page header) -->
<section class="content-header">
    @*<h1>
            Shift Setup
        </h1>*@
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Shift Setup</li>
        <li class="active">Add Shift</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info" style="border:1px solid; border-color:cadetblue; padding:10px">
        @*<div class="box-header with-border">
                <h3 class="box-title">Add Shift</h3>
            </div>*@
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-controller="Shift" method="post" asp-action="CreateShift">
            @*<div asp-validation-summary="ModelOnly" class="text-danger">
                    <span>Please correct the following errors</span>
                </div>*@



            @*@if (ViewData["Error"] != null)
                {
                    <div class="red">
                        <p><strong>Error:</strong> @ViewData["Error"].ToString()</p>
                    </div>
                }
                @if (TempData["Success"] != null)
                {
                    <div class="green">
                        <p><strong>Success:</strong> @TempData["Success"].ToString()</p>
                    </div>
                }*@





            <div class="card-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Shift Code</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ShiftCode" class="form-control" placeholder="Shift Code">
                        <span asp-validation-for="ShiftCode"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Shift Name</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ShiftName" class="form-control" placeholder="Shift Name">
                        <span asp-validation-for="ShiftName"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Standard Shift Hour</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="StandardShiftHour" class="form-control" placeholder="Standard Shift Hour" onkeypress='return isNumberKey(event)'>
                        <span asp-validation-for="StandardShiftHour"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Planned Down Change Time</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="PlannedDownChangeTime" class="form-control" placeholder="Planned Down Change Time" onkeypress='return isNumberKey(event)'>
                        <span asp-validation-for="PlannedDownChangeTime"></span>
                    </div>
                </div>


                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Productive Shift Hour</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="ProductiveShiftHour" class="form-control" placeholder="Productive Shift Hour" onkeypress='return isNumberKey(event)'>
                        <span asp-validation-for="ProductiveShiftHour"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Comments</label>
                    <div class="col-sm-10">
                        <input type="text" asp-for="Comments" class="form-control" placeholder="Comments">
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Shift Start Time</label>
                    <div class="col-sm-2">
                        <input type="time" asp-for="ShiftStartTime" class="form-control" placeholder="ShiftStartTime">
                    </div>
                </div>
                
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Shift End Time</label>
                    <div class="col-sm-2">
                        <input type="time" asp-for="ShiftEndTime" class="form-control" placeholder="ShiftEndTime">
                    </div>
                </div>

                
            </div>


            <!-- /.card-body -->
            <div class="box-footer">

                <a class="btn btn-mini btn-primary" href='@Url.Content("/Shift/Index")'>Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Create</button>

            </div>
            <!-- /.box-footer -->
        </form>
    </div>
    <!-- /.box -->
</section>




<script type="text/javascript">

    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode != 46 && (charCode < 48 || charCode > 57)))
            return false;
        return true;
    }


</script>

