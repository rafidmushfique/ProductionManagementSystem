@model PaginatedList<LILI_FPMS.Models.TblShiftSetup>



<section class="content-header">
    @*<h1>
            Shift Setup
        </h1>*@
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Shift Setup</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="card-body">
            <div class="col-xs-12">
                <div class="col-sm-11">
                    <form asp-action="Index" method="get">
                        <div class="form-actions no-color">
                            <div class="col-sm-12">
                                <div class="col-sm-6">
                                    <input type="text" name="SearchString" value="@ViewData["currentFilter"]" class="form-control" placeholder="Search for...">
                                </div>
                                <div class="col-sm-3">
                                    <span class="input-group-btn">
                                        @*<input  value="Search" class="btn btn-default" style="background-color:#4d4a45; color:white;" />*@
                                        <button type="submit" class="btn btn-primary" value="Search"><i class="fa fa-search fa-fw"></i>Search</button>
                                    </span>
                                </div>
                                <div class="col-sm-3">
                                    @*<a asp-action="Index">Back to Full List</a>*@
                                </div>
                            </div>
                        </div>
                    </form>

                </div>
                <div class="col-sm-1">
                    <a class="btn btn-primary" href="/Shift/Create">
                        <i class="fa fa-plus fa-fw"></i>Add
                    </a>
                </div>
            </div>
            @*<table id="example1" class="table table-bordered table-striped roundedCorners">*@
            <div class="col-sm-12 p-4">
                <table id="ShiftTable" class="table table-bordered">
                    <thead>
                        <tr >
                            <th style="text-align:center; width:7%">Id</th>
                            <th style="text-align:center;  width:10%">Shift Code</th>
                            <th style="text-align:center; width:10%">
                                <a style="color:white;" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">Shift Name <i class="fa fa-sort" style="font-size:20px;color:sandybrown;"></i></a>
                            </th>
                            <th style="text-align:center; width:10%">Standard Shift Hour</th>
                            <th style="text-align:center;  width:10%">Planned Down Change Time</th>
                            <th style="text-align:center;  width:10%">Productive Shift Hour</th>
                            <th style="text-align:center;  width:"30">Comments</th>
                            <th style="text-align:center; width:10%">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.ShiftCode)</td>
                            <td>@Html.DisplayFor(modelItem => item.ShiftName)</td>
                            <td>@Html.DisplayFor(modelItem => item.StandardShiftHour)</td>
                            <td>@Html.DisplayFor(modelItem => item.PlannedDownChangeTime)</td>
                            <td>@Html.DisplayFor(modelItem => item.ProductiveShiftHour)</td>
                            <td>@Html.DisplayFor(modelItem => item.Comments)</td>
                            <td style="text-align:center;"><a href="/Shift/Update/@item.Id"><i class="fa fa-edit" aria-hidden="true" style="font-size:20px;color:#4d4a45"></i></a> | <a href="#" onclick="Delete('@item.Id')"><i class="fa fa-trash" aria-hidden="true" style="font-size:20px;color:#4d4a45"></i></a></td>
                        </tr>
                        }
                </table>
            </div>
            @{
                var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
                var nextDisabled = !Model.HasNextPage ? "disabled" : "";
            }


            <div class="grid-table-footer">
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex - 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @prevDisabled"
                   style="background-color:#4d4a45; color:white;">
                    <i class="fa fa-angle-left fa-fw"></i>
                    Previous
                </a>
                <a asp-action="Index"
                   asp-route-sortOrder="@ViewData["CurrentSort"]"
                   asp-route-pageNumber="@(Model.PageIndex + 1)"
                   asp-route-currentFilter="@ViewData["CurrentFilter"]"
                   class="btn btn-default @nextDisabled"
                   style="background-color:#4d4a45; color:white;">
                    <i class="fa fa-angle-right fa-fw"></i>
                    Next
                </a>
            </div>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.row -->
</section>

