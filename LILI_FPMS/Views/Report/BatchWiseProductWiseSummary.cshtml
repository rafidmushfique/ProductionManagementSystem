@model IEnumerable<BatchWiseProductWiseSummaryViewModel>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2>Batch Wise Product Wise Summary Report</h2>
            </div>
            <div class="ibox-content" style="min-height: 6em;padding: .5em 0 0 0;">
                <form action="/Report/BatchWiseProductWiseSummary" method="get">
                    <div class="row">
                        <div class="col-md-2">
                            <label>Year</label>
                            <input type="text" class="form-control" name="year" value="@ViewBag.Year" />
                        </div>
                        <div class="col-md-2">
                            <label>Month</label>
                            <input type="text" class="form-control" name="month" value="@ViewBag.Month" />
                        </div>
                        <div class="col-md-2">
                            <label>Code</label>
                            <input type="text" class="form-control" name="code" value="@ViewBag.Code" />
                        </div>
                        <div class="col-md-2">
                            <label>Batch</label>
                            <input type="text" class="form-control" name="batch" value="@ViewBag.Batch" />
                        </div>
                        <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-sm" style="margin-top: 2.2em;height: 2.1em;">Search</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

@if (Model != null)
{
    <div class="row" style="margin-bottom:5em;">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content" style="width: 100%;display: block;overflow-y: auto;height:75vh">
                    <table id="myTable" class="table  table-responsive-sm table-hover">
                        <thead>
                            <tr style="margin:0;padding:0;border:none;">
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th></th>
                                <th colspan="6" style="border-left:1px solid white;">Standard Value</th>
                                <th colspan="6" style="border-left:1px solid white;">Actual Value</th>
                                <th colspan="6" style="border-left:1px solid white;">Variance</th>
                            </tr>
                            <tr style="margin:0;padding:0;border:none;">
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().CodePlusBatch)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().FGCode)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().FGName)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().PackSize)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().BatchNo)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().FGQuantity)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().RM)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().PM)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().ProcessLoss)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().Wastage)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().OHCost)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().TotalConsumption)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().ActualRM)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().ActualPM)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().ActualProcessLoss)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().ActualWastage)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().ActualOHCost)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().ActualTotalConsumption)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().DifferenceRM)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().DifferencePM)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().DifferenceProcessLoss)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().DifferenceWastage)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().DifferenceOHCost)</th>
                                <th style="border-left:1px solid white;">@Html.LabelFor(m => m.First().DifferenceTotalConsumption)</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BatchWiseProductWiseSummaryViewModel vm in Model)
                            {
                                <tr>
                                    <td>@vm.CodePlusBatch</td>
                                    <td>@vm.FGCode</td>
                                    <td>@vm.FGName</td>
                                    <td>@vm.PackSize</td>
                                    <td>@vm.BatchNo</td>
                                    <td>@vm.FGQuantity</td>
                                    <td>@vm.RM</td>
                                    <td>@vm.PM</td>
                                    <td>@vm.ProcessLoss</td>
                                    <td>@vm.Wastage</td>
                                    <td>@vm.OHCost</td>
                                    <td>@vm.TotalConsumption</td>
                                    <td>@vm.ActualRM</td>
                                    <td>@vm.ActualPM</td>
                                    <td>@vm.ActualProcessLoss</td>
                                    <td>@vm.ActualWastage</td>
                                    <td>@vm.ActualOHCost</td>
                                    <td>@vm.ActualTotalConsumption</td>
                                    <td>@vm.DifferenceRM</td>
                                    <td>@vm.DifferencePM</td>
                                    <td>@vm.DifferenceProcessLoss</td>
                                    <td>@vm.DifferenceWastage</td>
                                    <td>@vm.DifferenceOHCost</td>
                                    <td>@vm.DifferenceTotalConsumption</td>
                                </tr>
                            }
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
}

@section css
{
    <link rel="stylesheet" href="~/lib/datatable/datatable.min.css" />


}

@section Scripts
{
    <script src="~/lib/datatable/datatables.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#myTable').DataTable({
                fixedHeader: true,
                "scrollX": true,
                scrollY: 450,
                paging: false,
                dom: 'Bfrtip',
                buttons: [
                    'excelHtml5'
                ],
                //"pageLength": 50
            });
        });
    </script>
}
