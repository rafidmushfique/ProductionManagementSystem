@model LILI_FPMS.Models.TblStandardManHourSetup

@*<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>*@




@*<script src="~/lib/JQuery-unobtrusive-Ajax/jquery-ajax-unobtrusive-master/src/jquery.unobtrusive-ajax.js"></script>*@

<!-- Modal placeholder -->
<div id="modal-placeholder"></div>



<!-- Content Header (Page header) -->
<section class="content-header">
    @*<h1>
            Employee
        </h1>*@
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Standard Man-Hour Setup</li>
        <li class="active">Add Standard Man-Hour Setup</li>
    </ol>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <!-- Horizontal Form -->
    <div class="box box-info" style="border:1px solid; border-color:cadetblue; padding:10px">
        @*<div class="box-header with-border">
                <h3 class="box-title">Add Employee</h3>
            </div>*@
        <!-- /.box-header -->
        <!-- form start -->
        <form class="form-horizontal" asp-controller="StandardManHour" method="post" asp-action="CreateStandardSetup">
            <div class="card-body">
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Product Code</label>
                    <div class="col-sm-2">
                        <input type="text" asp-for="ProductCode" class="form-control" placeholder="Product Code" readonly>
                    </div>
                    <div class="col-sm-2 controls">
                        <button type="button" class="btn btn-info" data-toggle="ajax-modal" data-target="#add-product" data-url="@Url.Action("addProduct")">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Product Name</label>
                    <div class="col-sm-3">
                        <input type="text" Id="ProductName" class="form-control" placeholder="Product Name" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Standard Hour/Batch(RM)</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="StdHrPerBatchRM" class="form-control" placeholder="Standard Hour/Batch(RM)" value="@Model.StdHrPerBatchRM" style="text-align:right;" onkeypress="return isNumberKey(event)">
                        <span asp-validation-for="StdHrPerBatchRM"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Standard Man-Power/Batch(RM)</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="StdManPowerPerBatchRM" class="form-control" placeholder="Standard Man-Power/Batch (RM)" value="@Model.StdManPowerPerBatchRM" style="text-align:right;" onkeypress="return isNumberKey(event)">
                        <span asp-validation-for="StdManPowerPerBatchRM"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Standard Man-Power/Unit(RM)</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="StdManPowerPerUnitRm" class="form-control" placeholder="Standard Man-Power/Unit (PM)" value="@Model.StdManPowerPerUnitRm" style="text-align:right;" onkeypress="return isNumberKey(event)">
                        <span asp-validation-for="StdManPowerPerUnitRm"></span>
                    </div>
                </div>
                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Standard Hour/Batch(PM)</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="StdHrPerBatchPM" class="form-control" placeholder="Standard Hour/Batch (PM)" value="@Model.StdHrPerBatchPM" style="text-align:right;" onkeypress="return isNumberKey(event)">
                        <span asp-validation-for="StdHrPerBatchPM"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Standard Man-Power/Batch(PM)</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="StdManPowerPerBatchPM" class="form-control" placeholder="Standard Man-Power/Batch (PM)" value="@Model.StdManPowerPerBatchPM" style="text-align:right;" onkeypress="return isNumberKey(event)">
                        <span asp-validation-for="StdManPowerPerBatchPM"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label for="inputEmail3" class="col-sm-2 control-label">Standard Man-Power/Unit(PM)</label>
                    <div class="col-sm-3">
                        <input type="text" asp-for="StdManPowerPerUnitPm" class="form-control" placeholder="Standard Man-Power/Unit (PM)" value="@Model.StdManPowerPerUnitPm" style="text-align:right;" onkeypress="return isNumberKey(event)">
                        <span asp-validation-for="StdManPowerPerUnitPm"></span>
                    </div>
                </div>


                <div class="form-group">
                    <label asp-for="Comments" class="col-sm-2 control-label">Comments</label>
                    <div class="col-sm-3">
                        <textarea type="text" asp-for="Comments" class="form-control" placeholder="Comments" rows="1"></textarea>
                        <span asp-validation-for="Comments"></span>
                    </div>
                </div>
            </div>


                <!-- /.card-body -->
                <div class="box-footer">

                <a class="btn btn-mini btn-primary" href='@Url.Content("/StandardManHour/Index")'>Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Create</button>

                </div>
                <!-- /.box-footer -->
</form>
    </div>
    <!-- /.box -->
</section>




<script type="text/javascript">
   
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode
        if (charCode > 31 && (charCode != 46 && (charCode < 48 || charCode > 57)))
            return false;
        return true;
    }

</script>


