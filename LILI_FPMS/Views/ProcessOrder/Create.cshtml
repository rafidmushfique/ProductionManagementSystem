                </div>
            </div>


            <!-- /.card-body -->
            <div class="box-footer">

                <a class="btn btn-mini btn-primary" href='@Url.Content("/ProcessOrder/Index")'>Cancel</a>
                <button type="submit" class="btn btn-info pull-right">Create</button>

