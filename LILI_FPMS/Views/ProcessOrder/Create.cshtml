        $("#MaterialNameSearch").val('');
        $("#MaterialUnit").val('');
        $("#StandardRecipeQty").val('');
        $("#FloorStock").val('');
        $("#RequiredQty").val('');
    }

    function removeRow(id) {
        var controlToBeRemoved = "#trtbReqBOMDtl" + id;
